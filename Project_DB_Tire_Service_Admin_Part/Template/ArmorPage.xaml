<Page x:Class="Project_DB_Tire_Service_Admin_Part.Template.ArmorPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Project_DB_Tire_Service_Admin_Part.Template"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="ArmorPage">

    <Grid Background="Black" IsHitTestVisible="True">
        <DataGrid x:Name="armorTable" Margin="0" IsReadOnly="True" IsSynchronizedWithCurrentItem="False">
            <DataGrid.Columns>
                <DataGridTextColumn Binding="{Binding idCustomer}" Header="Код клиента" Width="120*"/>
                <DataGridTextColumn Binding="{Binding fioCustomer}" Header="ФИО клиента" Width="120*"/>
                <DataGridTextColumn Binding="{Binding phoneCustomer}" Header="Телефон" Width="120*"/>
                <DataGridTextColumn Binding="{Binding emailCustomer}" Header="Email" Width="120*"/>
                <DataGridComboBoxColumn Header="Категория" SelectedItemBinding="{Binding Path=CategoryName}"/>
            </DataGrid.Columns>
        </DataGrid>
    </Grid>
</Page>
