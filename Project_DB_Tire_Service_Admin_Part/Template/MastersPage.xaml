<Page x:Class="Project_DB_Tire_Service_Admin_Part.Template.MastersPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Project_DB_Tire_Service_Admin_Part.Template"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="MastersPage">

    <Grid Background="Black" IsHitTestVisible="True">
    <DataGrid x:Name="mastersTable" Margin="0" IsSynchronizedWithCurrentItem="False">
        <DataGrid.Columns>
            <DataGridTextColumn Binding="{Binding idMaster}" Header="Код мастера" Width="120*"/>
            <DataGridTextColumn Binding="{Binding fioMaster}" Header="ФИО мастера" Width="120*"/>
            <DataGridTextColumn Binding="{Binding specializationMaster}" Header="Специализация" Width="120*"/>
            <DataGridTextColumn Binding="{Binding phoneMaster}" Header="Телефон" Width="120*"/>
        </DataGrid.Columns>
    </DataGrid>
    </Grid>
</Page>
